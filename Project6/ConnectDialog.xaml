<Window x:Class="Project6.ConnectDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project6"
        mc:Ignorable="d"
        Title="Server-Client Select" Height="180" MinHeight="180" MaxHeight="180" Width="210" MinWidth="210" MaxWidth="210">
    <StackPanel>
        <GroupBox x:Name="groupBox" Header="Role Select" HorizontalAlignment="Right" Margin="10" VerticalAlignment="Top" Height="38">
            <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                <RadioButton x:Name="ServerRB" Content="Server" Width="98" Click="Role_Checked" IsChecked="True"/>
                <RadioButton x:Name="ClientRB" Content="Client" Width="97" Click="Role_Checked"/>
            </StackPanel>
        </GroupBox>
        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Margin="10">
            <Label Content="IP Address:"/>
            <TextBox x:Name="IPAddressTB" Text="localhost" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Width="102" IsEnabled="False"/>
        </StackPanel>
        <Button x:Name="button" Content="OK" Width="75" HorizontalAlignment="Right" Margin="10" Click="button_Click"/>

    </StackPanel>
</Window>
