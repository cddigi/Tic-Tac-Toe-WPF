<Window x:Class="Project6.PlayAgainDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project6"
        mc:Ignorable="d"
        Title="Tic Tac Toe" Height="140" Width="200">
    <StackPanel Margin="5">
        <GroupBox x:Name="groupBox" Header="Do You Wish to Play Again?" HorizontalAlignment="Left" VerticalAlignment="Top" Width="172" Margin="5,0,0,0" Height="50">
            <StackPanel>
                <RadioButton x:Name="Yes" Content="Yes" IsChecked="True"/>
                <RadioButton x:Name="No" Content="No"/>
            </StackPanel>
        </GroupBox>
        <Button Content="OK" Margin="5,5,5,0" Click="Button_Click"/>
    </StackPanel>
</Window>
